{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://indiastack.in/dpi/schema/infrastructure.json",
  "title": "DPI Operational Manifest v1.4",
  "description": "Operational disclosure mapped to structural corrigibility tests.",
  "type": "object",
  "required": ["meta", "access"],

  "properties": {

    "meta": {
      "type": "object",
      "required": ["system_id", "deployment", "lifecycle"],
      "properties": {
        "system_id": {
          "type": "string",
          "examples": ["urn:gov:in:uidai", "api.payments.gov"]
        },
        "deployment": {
          "type": "string",
          "enum": ["production", "staging", "pilot"]
        },
        "lifecycle": {
          "type": "string",
          "enum": ["active", "deprecated", "archived"]
        },
        "license_spdx": {
          "type": "string",
          "default": "PROPRIETARY"
        }
      }
    },

    "operations": {
      "type": "object",
      "description": "Evidence surface for EXIT and AUDIT.",
      "properties": {
        "status_page": {
          "type": "string",
          "format": "uri"
        },
        "slos": {
          "type": "object",
          "properties": {
            "uptime_target": {
              "type": "string",
              "description": "Operator's definition of acceptable exclusion. Mandatory systems with <100% target admit structural denial of service.",
              "examples": ["99.95%", "99.9%", "99%"]
            },
            "dispute_resolution": {
              "type": "string",
              "description": "Max time to correct an error state. AUDIT baseline.",
              "examples": ["24h", "72h", "7d", "30d"]
            }
          }
        }
      }
    },

    "governance": {
      "type": "object",
      "description": "Evidence surface for GOVERN.",
      "required": ["model", "escalation_paths"],
      "properties": {
        "model": {
          "type": "string",
          "enum": ["community", "foundation", "corporate", "government", "closed"]
        },
        "escalation_paths": {
          "type": "array",
          "description": "Power hierarchy for overriding system errors.",
          "items": {
            "type": "object",
            "required": ["level", "url", "binding"],
            "properties": {
              "level": {
                "type": "string",
                "examples": ["Call Center", "Grievance Portal", "Ombudsman", "Appellate Tribunal", "Judicial Review"]
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "binding": {
                "type": "boolean",
                "description": "If false, the escalation authority is advisory theater."
              }
            }
          }
        },
        "public_participation": {
          "type": "object",
          "properties": {
            "rfc": {
              "type": "array",
              "items": { "type": "string", "format": "uri" }
            },
            "issues": {
              "type": "array",
              "items": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    },

    "components": {
      "type": "object",
      "description": "Evidence surface for CODE and FORK.",
      "properties": {
        "repositories": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["url"],
            "properties": {
              "name": { "type": "string" },
              "url": { "type": "string", "format": "uri" },
              "role": {
                "type": "string",
                "enum": ["core", "client", "sdk", "docs"]
              }
            }
          }
        },
        "closed_components": {
          "type": "array",
          "description": "Proprietary/opaque dependencies (e.g. ['oracle', 'biometric-sdk']).",
          "items": { "type": "string" }
        }
      }
    },

    "learned_components": {
      "type": "array",
      "description": "Evidence surface for AI Corrigibility.",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["advisory", "decision", "enforcement"]
          },
          "when_uncertain": {
            "type": "string",
            "enum": ["escalates", "fails_open", "fails_closed", "silent"],
            "description": "Failure mode disclosure. 'Silent' indicates fail-deadly design."
          },
          "model_cards": {
            "type": "array",
            "items": { "type": "string", "format": "uri" }
          },
          "training_docs": {
            "type": "array",
            "items": { "type": "string", "format": "uri" }
          }
        }
      }
    },

    "access": {
      "type": "object",
      "description": "Evidence surface for EXIT.",
      "required": ["offline_equivalent"],
      "properties": {
        "endpoints": {
          "type": "array",
          "items": { "type": "string", "format": "uri" }
        },
        "offline_channels": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "url"],
            "properties": {
              "type": {
                "type": "string",
                "examples": ["CSC Location Map", "Bank Branch", "Post Office"]
              },
              "url": { "type": "string", "format": "uri" }
            }
          }
        },
        "offline_equivalent": {
          "type": "boolean",
          "description": "Perjury trap: Does the offline path offer parity in outcome/cost?"
        },
        "data_export": {
          "type": "array",
          "items": { "type": "string", "format": "uri" }
        }
      }
    }
  }
}
